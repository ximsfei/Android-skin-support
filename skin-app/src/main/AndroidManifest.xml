<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ximsfei.skindemo">

    <application
        android:name="com.ximsfei.skindemo.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="com.ximsfei.skindemo.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.ximsfei.skindemo.MainActivity" />

        <activity
            android:name="com.ximsfei.skindemo.CollapsingToolbarLayoutActivity"
            android:label="CollapsingToolbarLayoutActivity" />

        <activity
            android:name="com.ximsfei.skindemo.MaterialDesignActivity"
            android:label="Material Design" />

        <!-- flycotablayout -->
        <activity
            android:name=".flycotablayout.ui.SimpleHomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".flycotablayout.ui.CommonTabActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".flycotablayout.ui.SlidingTabActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".flycotablayout.ui.SegmentTabActivity"
            android:screenOrientation="portrait" />

    </application>

</manifest>
